{{!-- 分頁局部樣板內容 --}}
<h1 class="mb-1 restaurant-show-title">{{restaurant.name}}</h1>
<h1 class="mb-1 restaurant-show-title">{{restaurant.name_en}}</h1>
<div class="container">
  <div class="row">
    <div class="col-4">
      <div class="operate mb-3">
        <a href="/"><button class="btn btn-info">返回清單</button></a>
        <form action="/restaurants/{{restaurant._id}}/edit">
          <button type="submit" class="btn btn-success">Edit</button>
        </form>
        <button type="button" data-toggle="modal" data-target="#delete-modal-{{restaurant._id}}"
          class="btn btn-danger">刪除餐廳
        </button>
      </div>
    </div>

  </div>
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">
      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別 (Category)：
        </span>
        {{restaurant.category}}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址 (Address)：
        </span>
        {{restaurant.location}}
        <a href="{{restaurant.google_map}}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話 (Phone)：
        </span>
        {{restaurant.phone}}
      </p>

      <p class="mb-5">
        <span class="text-secondary">
          簡介 (Description)：
        </span>
        {{restaurant.description}}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{restaurant.image}}" alt="{{restaurant.name}}"
        style="max-width: 600px;">
    </div>
  </div>
</div>


{{!-- delete modal --}}
<div class="modal fade" id="delete-modal-{{restaurant._id}}" data-backdrop="static" tabindex="-1" data-keyboard="false"
  aria-labelledby="delete-modal-{{restaurant._id}}-Label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        要刪除 <strong>{{restaurant.name}}</strong> 嗎？
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-success" data-dismiss="modal">取消</button>
        <form action="/restaurants/{{restaurant._id}}/delete" method="POST">
          <button type="submit" class="btn btn-danger">確認刪除</button>
        </form>
      </div>
    </div>
  </div>
</div>